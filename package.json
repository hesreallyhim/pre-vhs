{
  "name": "pre-vhs",
  "version": "1.0.0",
  "description": "An intuitive, highly configurable pre-processor for writing charmbracelet/vhs scripts with more complex command sequences in fewer words",
  "main": "src/index.js",
  "bin": {
    "pre-vhs": "src/index.js"
  },
  "files": [
    "src",
    "pre-vhs.config.js",
    "README.md",
    "docs/REFERENCE.md",
    "docs/LICENSE"
  ],
  "scripts": {
    "test": "vitest --run",
    "test:ci": "npm run lint && npm run test && npm run examples:check",
    "test:watch": "vitest",
    "snapshots:regen": "vitest --run -u test/docs.typing-demo.test.js",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "examples:check": "node scripts/examples.js check",
    "examples:regen": "node scripts/examples.js regen",
    "render:social": "bash docs/render-social-png.sh docs/pre-vhs-social.svg docs/pre-vhs-social.png",
    "pre-release": "npm run lint && npm run test && npm run examples:check && npm run format && npm run coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hesreallyhim/pre-vhs.git"
  },
  "author": "Really Him",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hesreallyhim/pre-vhs/issues"
  },
  "homepage": "https://github.com/hesreallyhim/pre-vhs#readme"
}
